<Window x:Class="Cas.Common.WPF.Test.View.SampleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cas.Common.WPF.Test.View"
        xmlns:viewModel="clr-namespace:Cas.Common.WPF.Test.ViewModel"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behaviors="clr-namespace:Cas.Common.WPF.Behaviors;assembly=Cas.Common.WPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        d:DataContext="{d:DesignInstance viewModel:SampleDialogViewModel, d:IsDesignTimeCreatable=False}"
        Title="{Binding Path=Title}" Height="300" Width="300">
     
    <Grid>
        <StackPanel>
            <Button Command="{Binding Path=ShowMessageCommand}">Show Message</Button>
        </StackPanel>
    </Grid>
</Window>
